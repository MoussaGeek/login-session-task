<!DOCTYPE html>
<html>
  <head>
    <title>CdpWebRailsSessionLoginTask</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p id="notice"><%= notice %></p>
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
    <% end %>
    <% if logged_in? %>
      <%= link_to "Task List", tasks_path, id: "task-index" %><br>
      <%= link_to "Register a task", new_task_path, id: "new-task" %><br>
      <%= link_to "Account", user_path(current_user.id), id: "my-account" %><br>
      <%= link_to "Logout", session_path(current_user.id), confirm: 'Êtes vous sûr ?' ,method: :delete, id: "sign-out" %>
    <% else %>
      <%= link_to "Account registration", new_user_path, id: "sign-up" %>
      <%= link_to "Login", new_session_path, id: "sign-in" %>
    <% end %>
    <%= yield %>
  </body>
</html>
